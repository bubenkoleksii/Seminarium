@page
@model IdentityService.Pages.Account.ForgotPassword.IndexModel
@{
}

<div>
    <partial name="_ValidationSummary" />

    @if (Model is {IsSent: true })
    {
        <div class="alert alert-success" style="text-align: center;">
            <div>Лист для відновлення паролю надіслано на <b>@Model.Username</b></div>
        </div>
    }

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header d-flex flex-column align-items-center">
                    <a href="@Model.ClientHomeUrl" style="text-decoration: none; cursor: pointer;" class="d-flex align-items-center justify-content-center text-muted">
                        <img src="~/logo.png" height="30" alt="Логотип" class="mr-2">
                        <h3 class="m-0">
                            <span>Seminarium</span>
                        </h3>
                    </a>
                    <h2 class="mt-2">Відновлення паролю</h2>
                </div>

                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label asp-for="Username"></label>
                            <input class="form-control" placeholder="andrii.valko@gmail.com" type="email" asp-for="Username">
                            <span asp-validation-for="Username" class="text-danger"></span>

                            <a class="pt-1 d-block" asp-page="../Login/Index">
                                Повернутись до сторінки входу
                            </a>
                        </div>

                        <div class="d-flex align-items-end mt-2">
                            <button type="submit" class="btn btn-secondary flex-grow-1">Надіслати лист для відновлення паролю</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>