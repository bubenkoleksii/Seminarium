@page
@model IdentityService.Pages.Account.ForgotPassword.ResetModel
@{
}

<div>
    <partial name="_ValidationSummary" />
    
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header d-flex flex-column align-items-center">
                    <a href="@Model.ClientHomeUrl" style="text-decoration: none; cursor: pointer;" class="d-flex align-items-center justify-content-center text-muted">
                        <img src="~/logo.png" height="30" alt="Логотип" class="mr-2">
                        <h3 class="m-0">
                            <span>Seminarium</span>
                        </h3>
                    </a>
                    <h2 class="mt-2">Зміна паролю</h2>
                </div>

                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="password" class="form-control" asp-for="Password" autocomplete="off">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="RepeatPassword"></label>
                            <input type="password" class="form-control" asp-for="RepeatPassword" autocomplete="off">
                            <span asp-validation-for="RepeatPassword" class="text-danger"></span>

                            <a class="pt-1 d-block" asp-page="../Login/Index">
                                Повернутись до сторінки входу
                            </a>
                        </div>

                        <div class="d-flex align-items-end mt-2">
                            <button type="submit" class="btn btn-success flex-grow-1">Змінити пароль</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>