@page
@model IdentityService.Pages.Account.Register.IndexModel
@{
}

<div>
    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header d-flex flex-column align-items-center">
                    <a href="@Model.Input.ClientHomeUrl" style="text-decoration: none" class="d-flex align-items-center justify-content-center text-muted">
                        <img src="~/logo.png" height="30" alt="Логотип" class="mr-2">
                        <h3 class="m-0">
                            <span>Seminarium</span>
                        </h3>
                    </a>
                    <h2 class="mt-2">Реєстрація</h2>
                </div>

                <div class="card-body">
                    <form asp-page="/Account/Register/Index">
                        <div class="form-group">
                            <label asp-for="Input.Username"></label>
                            <input class="form-control" placeholder="andrii.valko@gmail.com" type="email" asp-for="Input.Username">
                            <span asp-validation-for="Input.Username" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.FullName"></label>
                            <input class="form-control" placeholder="Валько Андрій Петрович" asp-for="Input.FullName">
                            <span asp-validation-for="Input.FullName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input type="password" class="form-control" asp-for="Input.Password" autocomplete="off">
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.RepeatPassword"></label>
                            <input type="password" class="form-control" asp-for="Input.RepeatPassword" autocomplete="off">
                            <span asp-validation-for="Input.RepeatPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group form-check">
                            <input class="form-check-input" type="checkbox" id="agreeWithProcessing" asp-for="Input.AgreeWithProcessing" style="cursor: pointer;">
                            <label class="form-check-label" for="agreeWithProcessing" style="cursor: pointer;">
                                <span style="cursor: pointer;">@Html.DisplayNameFor(model => model.Input.AgreeWithProcessing)</span>
                            </label>
                            <span asp-validation-for="Input.AgreeWithProcessing" class="text-danger"></span>
                        </div>

                        <a class="pb-2 d-block" asp-page="../Login/Index">
                            Вже маєте акаунт? Перейдіть, щоб увійти
                        </a>

                        <div class="d-flex align-items-end mt-2">
                            <button class="btn btn-success flex-grow-1" name="Input.Button" value="register">
                                Зареєструватися
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>